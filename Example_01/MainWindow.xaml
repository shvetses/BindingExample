<Window x:Class="Example_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <StackPanel>
        <Slider x:Name="sld"
        Minimum="10"
        Maximum="40"
        Value="12"
        TickFrequency="1"
        TickPlacement="TopLeft"
        IsSnapToTickEnabled="True"/>

        <TextBlock Text="Какой-то текст"
                   FontSize="{Binding ElementName=sld, Path=Value, Mode=TwoWay}"
                   x:Name="txtBlock"/>
        <Button Content="Кнопка" Click="Button_Click" />
        <TextBox Text="{Binding ElementName=txtBlock, Path=FontSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

    </StackPanel>
</Window>
